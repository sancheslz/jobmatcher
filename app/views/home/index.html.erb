<div class="jumbotron">
    <h1 class="display-1">
        <%= t('views.home.title')%>
    </h1>
    <div class="lead">
        <%= t('views.home.description')%>
    </div>
</div>
<h1 class="h2 text-center"><%= t('views.home.last_opportunities') %></h1>
<% if @opportunity.any? %>
    <div class="d-flex flex-wrap">
        <% @opportunity.each do |item| %>
            <div class="card m-2" style="min-width: 22rem" id='opportunity_<%= item.id %>'>
            <div class="card-body">
                <h5 class="card-title"><%= item.title %></h5>

                <%= link_to item.company, :class => 'card-subtitle text-muted' do %>
                        <i class="far fa-building"></i> <%= item.company.name %>
                <% end %>

                <div class="card-text mt-3 mb-3">
                    <div class="text">
                    <%= item.description %>
                    </div>
                    <div class="skills">
                        <span class="badge badge-primary">Primary</span>
                        <span class="badge badge-secondary">Secondary</span>
                    </div>


                </div>

                <%= link_to item, :class => 'btn btn-sm btn-info' do %>
                        <i class="fas fa-plus"></i> <%= t('views.home.more') %>
                <% end %>
            </div>
        </div>
    <% end %>
<% else %>
    <div class="d-flex flex-column align-items-center">
        <div class="display-3 m-3 text-secondary"><i class="fas fa-hand-holding"></i></div>
        <div class="lead"><%= t('views.home.empty') %></div>
    </div> 
<% end %>
</div>