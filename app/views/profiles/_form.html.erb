<% if @profile.errors.any? %>
    <div class="alert alert-danger"><i class="fas fa-exclamation"></i> <%= t('views.forms.warning') %></div>
<% end %>

<%= form_with(model: @profile, local: true, class: 'form-group') do |f| %>
<div class="row mb-2">
    <div class="col">
        <%= f.label      :name  %>
        <%= f.text_field :name , { class: 'form-control' } %>
        <div class="text-danger"><%= @profile.errors[:name].join(' | ') %></div>
    </div>
    <div class="col">
        <%= f.label      :cpf  %>
        <%= f.text_field :cpf , { class: 'form-control' } %>
        <div class="text-danger"><%= @profile.errors[:cpf].join(' | ') %></div>
    </div>
</div>
<div class="row mb-2">
    <div class="col">
        <%= f.label      :bio  %>
        <%= f.text_area :bio , { class: 'form-control' } %>
        <div class="text-danger"><%= @profile.errors[:bio].join(' | ') %></div>
    </div>
</div>
<div class="row mb-2">
    <div class="col-6">
        <%= f.label      :address  %>
        <%= f.text_field :address , { class: 'form-control' } %>
        <div class="text-danger"><%= @profile.errors[:address].join(' | ') %></div>
    </div>
    <div class="col-3">
        <%= f.label      :number  %>
        <%= f.text_field :number , { class: 'form-control' } %>
        <div class="text-danger"><%= @profile.errors[:number].join(' | ') %></div>
    </div>
    <div class="col-3">
        <%= f.label      :complement  %>
        <%= f.text_field :complement , { class: 'form-control' } %>
        <div class="text-danger"><%= @profile.errors[:complement].join(' | ') %></div>
    </div>
</div>
<div class="row mb-2">
    <div class="col">
        <%= f.label      :neighborhood  %>
        <%= f.text_field :neighborhood , { class: 'form-control' } %>
        <div class="text-danger"><%= @profile.errors[:neighborhood].join(' | ') %></div>
    </div>
    <div class="col">
        <%= f.label      :city  %>
        <%= f.text_field :city , { class: 'form-control' } %>
        <div class="text-danger"><%= @profile.errors[:city].join(' | ') %></div>
    </div>
    <div class="col">
        <%= f.label      :state  %>
        <%= f.text_field :state , { class: 'form-control' } %>
        <div class="text-danger"><%= @profile.errors[:state].join(' | ') %></div>
    </div>
    <div class="col">
        <%= f.label      :postal_code  %>
        <%= f.text_field :postal_code , { class: 'form-control' } %>
        <div class="text-danger"><%= @profile.errors[:postal_code].join(' | ') %></div>
    </div>
</div>
<div class="row mb-2">
    <div class="col">
        <%= f.label      :photo  %>
        <%= f.file_field :photo , { class: 'form-control' } %>
        <div class="text-danger"><%= @profile.errors[:photo].join(' | ') %></div>
    </div>
</div>





<%= button_tag(:type => :submit, :class => "mt-3 btn btn-primary") do %>
    <i class="far fa-save"></i> <%= submit %>
<% end %>

<% end %>

