<h2 class="h2 mb-4 mt-3"><%= t('views.home.title')%> | <%= t('views.profiles.mine')%></h2>

<div class="row mb-3 mt-3">
    <div class="col-3 mr-2 text-center">
        <% if @profile.photo.attached? %>
            <%= image_tag(@profile.photo, size: '150x150', style: 'border-radius: 100%') %>
        <% else %>
            <div class="d-flex flex-row justify-content-center">
                <div class="h2 bg-light p-5" style="border-radius: 100%; width: 150px; height: 150px"><i class="fas fa-user"></i></div>
            </div>
        <% end %>

        <div class="h3 mt-3"><%= @profile.name %></div> 
        <div><%= @profile.user.email %></div>
        <div>
            <% unless @profile.linkedin.blank? %>
                <%= link_to "http://#{@profile.linkedin}", target: '_blank', class: 'p-2' do %>
                    <i class="fab fa-linkedin-in"></i>
                <% end %>
            <% end %>
            <% unless @profile.github.blank? %>
                <%= link_to "http://#{@profile.github}", target: '_blank', class: 'p-2' do %>
                    <i class="fab fa-github"></i>
                <% end %>
            <% end %>
        </div>

        <div id="view_control" class="mt-3">
            <%= link_to edit_profile_path(@profile), :class => 'btn btn-warning' do %>
                <i class="far fa-edit"></i> <%= t('views.main.edit') %>
            <% end %>
        </div>
    </div>
    
    <div class="col">
    
        <div class="row mb-1 pb-2">
            <div class='col'>
                <div class="badge badge-dark"><%= t('activerecord.attributes.profile.bio') %></div>
                <div class="pl-2"><%= @profile.bio || '-' %>
                </div>
            </div>
        </div>  

        <div class="row mb-1 pb-2 mt-4">
            <div class='col'>
                <div class="badge badge-dark"><%= t('activerecord.attributes.profile.cpf') %></div>
                <div class="pl-2"><%= @profile.cpf %></div>
            </div>
        </div>

        <hr>        

        <div class="row mb-1 pb-2 mt-3">
            <div class="col-8">
                <div class="badge badge-dark"><%= t('activerecord.attributes.profile.address') %></div>
                <div class="pl-2"><%= @profile.address || '-'  %></div>
            </div>

            <div class="col-2">
                <div class="badge badge-dark"><%= t('activerecord.attributes.profile.number') %></div>
                <div class="pl-2"><%= @profile.number || '-' %></div>
            </div>
            <div class="col-2">
                <div class="badge badge-dark"><%= t('activerecord.attributes.profile.complement') %></div>

                <div class="pl-2"><%= @profile.complement || '-' %></div>    
            </div>
        </div>  

        <div class="row mb-1 pb-2">
            <div class="col-5">
                <div class="badge badge-dark"><%= t('activerecord.attributes.profile.neighborhood') %></div>

                <div class="pl-2"><%= @profile.neighborhood || '-' %></div>
            </div>

            <div class="col-3">
                <div class="badge badge-dark"><%= t('activerecord.attributes.profile.city') %></div>

                <div class="pl-2"><%= @profile.city || '-' %></div>
            </div>

            <div class="col-2">
                <div class="badge badge-dark"><%= t('activerecord.attributes.profile.state') %></div>

                <div class="pl-2"><%= @profile.state || '-' %></div>
            </div>

            <div class="col-2">
                <div class="badge badge-dark"><%= t('activerecord.attributes.profile.postal_code') %></div>

                <div class="pl-2"><%= @profile.postal_code || '-' %></div>
            </div>
        </div>  

    </div>
</div>