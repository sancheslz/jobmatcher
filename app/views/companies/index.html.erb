<h2 class="h2 mb-4 mt-3"><%= t('views.home.title')%> | <%= t('views.companies.list') %></h2>

<% @companies.each do |company| %>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-1">
                    <div class="d-flex flex-row justify-content-center">
                        <% if company.logo.attached? %>
                            <%= image_tag(company.logo, size: '50x50', style: 'border-radius: 100%') %>
                        <% end %>
                    </div>
                </div>
                <div class="col-10">
                    <h5 class="card-title"><%= link_to company.name, company %></h5>
                    <p class="card-text">
                        <%= t('views.companies.opportunities') %>: <%= company.active_opportunities %>
                    </p>
                    <p class="card-text">
                        <%= company.website %>
                    </p>
                </div>
            </div>
        </div>
    </div>
<% end %>