<% if @technologies.any? %>
    <ul class="list-group">
        <% @technologies.each do |technology| %>
            <li id="technology_<%= technology.id %>" class="list-group-item d-flex justify-content-between align-items-center">
                <%= technology.name %>
                <div>
                    <%= link_to edit_technology_path(technology), :class => "btn btn-sm btn-warning" do%>
                        <i class="far fa-edit"></i> <%= t('views.main.edit') %>
                    <% end %>
                </div>
            </li>
        <% end %>
    </ul>
<% else %>
    <div class="d-flex flex-column align-items-center">
        <div class="display-3 m-3 text-secondary"><i class="fas fa-hand-holding"></i></div>
        <div class="lead"><%= t('views.technologies.empty') %></div>
    </div> 
<% end %>